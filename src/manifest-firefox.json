{
  "name": "AVME",
  "version": "0.3.3",
  "manifest_version": 2,
  "description": "AVME",
  "homepage_url": "https://www.avme.io",
  "background": {
    "scripts": ["index.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@avme.io",
      "strict_min_version": "54"
    }
  },
  "browser_action": {
    "default_title": "AVME",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    }
  },
  "content_scripts" : [{
    "matches": ["file://*/*", "http://*/*", "https://*/*"],
    "js": ["inject.js"],
    "run_at": "document_start",
    "all_frames": true
  }],
  "permissions": [
	"activeTab",
    "tabs",
    "storage",
	"<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  }
}
